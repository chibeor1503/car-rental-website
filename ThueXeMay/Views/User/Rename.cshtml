@model ThueXeMay.Models.user
@{
    ViewBag.Title = "Rename";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../content/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-0 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="~/Home">Trang Chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Đổi thông tin<i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Đổi thông tin</h1>
            </div>
        </div>
    </div>
</section>




<div class="card mb-4">
    <div class="card-header" style="color: #0061f2"><b></b></div>
    <div class="card-body">
        @using (Html.BeginForm("Rename", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()


            <div class="table-responsive">
                <div class="mb-3">
                    <label class=" mb-10" for="confirmPassword">Đổi thông tin</label>
                    <input type="number" hidden name="id" value="@Model.id_user" />

                </div>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            <div class="mb-3">
                                <label class=" mb-10" for="confirmPassword">Họ:</label>
                                <input class="form-control" required name="fnnew" type="text" placeholder="Nhập họ mới...">
                            </div>

                            <div class="mb-3">
                                <label class=" mb-10" for="confirmPassword">Địa chỉ:</label>
                                <input class="form-control" required name="adnew" type="text" placeholder="Nhập địa chỉ mới...">
                            </div>

                            <div class="mb-3">
                                <label class=" mb-10" for="confirmPassword">Giới tính:</label>
                                <input class="form-control" required name="gdnew" type="text" placeholder="Nhập giới tính mới...">
                            </div>

                        </th>
                        <th>

                            <div class="mb-3">
                                <label class=" mb-10" for="confirmPassword">Tên:</label>
                                <input class="form-control" required name="lnnew" type="text" placeholder="Nhập tên bạn mới...">
                            </div>
                            <div class="mb-3">
                                <label class=" mb-10" for="confirmPassword">Số điện thoại:</label>
                                <input class="form-control" required name="pnnew" type="text" placeholder="Nhập số điện thoại mới...">
                            </div>


                        </th>
                    </tr>
                </table>
            </div>








            <button class="btn btn-primary" type="submit">Xác nhận</button>
        }
    </div>
</div>